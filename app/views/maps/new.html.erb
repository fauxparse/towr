<%= form_for @map, :as => :map, :url => maps_path do |form| %>
  <div class="map editor">
    <div class="info">
      <%= form.text_field :name, :placeholder => "UNTITLED MAP" %>
      <h3>by <strong><%= @map.user || "Anonymous" %></strong></h3>
    </div>
    <%= field @map %>
  </div>
<% end %>

<% content_for :scripts do %>
  <script type="text/javascript" charset="utf-8">
    
    window.addEvent('domready', function() {
      new Form.Placeholder('map_name');
      new Editor($$('.map')[0]);
    });
    
  </script>
<% end %>